<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
  <filter>
    <filter-name>UserAuthenticationFilter</filter-name>
    <filter-class>com.stretchcom.mobilePulse.server.UserAuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UserAuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>MobilePulse</servlet-name>
    <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
    <init-param>
      <param-name>org.restlet.application</param-name>
      <param-value>com.stretchcom.mobilePulse.server.MobilePulseApplication</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>MobilePulse</servlet-name>
    <url-pattern>/rest/v1/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Audio</servlet-name>
    <servlet-class>com.stretchcom.mobilePulse.server.AudioServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Audio</servlet-name>
    <url-pattern>/audio/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CrashStackData</servlet-name>
    <servlet-class>com.stretchcom.mobilePulse.server.CrashStackDataServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CrashStackData</servlet-name>
    <url-pattern>/crashStackData/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>EmailTaskServlet</servlet-name>
    <servlet-class>com.stretchcom.mobilePulse.server.EmailTaskServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmailTaskServlet</servlet-name>
    <url-pattern>/sendEmailTask</url-pattern>
  </servlet-mapping>


  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admin</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

</web-app>
